<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_vertical|center_horizontal">
		  
 	<Button 
  
			android:id="@+id/ConsulterListeButton"
			android:background="@drawable/list"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	<Button 
  
			android:id="@+id/StatistiquesButton" 
			android:background="@drawable/graph"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/ConsulterListeButton" 
			android:layout_alignTop="@id/ConsulterListeButton" />
	<Button

			android:id="@+id/AboutButton" 
			android:background="@drawable/about"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_below="@id/ConsulterListeButton" 
			android:layout_alignLeft="@id/ConsulterListeButton" />
	<Button 

			android:id="@+id/QuitterButton" 
			android:background="@drawable/quit"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/AboutButton" 
			android:layout_alignTop="@id/AboutButton" /> 
</RelativeLayout>
