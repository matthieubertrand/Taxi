<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">


	<TextView android:id="@+id/nomclient" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textStyle="bold"
		android:layout_marginBottom="10px" />



	<TextView android:id="@+id/prenomclient" android:layout_width="wrap_content"
		android:layout_marginBottom="10px" android:layout_height="wrap_content"
		android:textStyle="bold" />



	<TextView android:id="@+id/telclient" android:layout_width="wrap_content"
		android:layout_marginBottom="10px" android:layout_height="wrap_content"
		android:textStyle="bold" />
	<TableLayout android:layout_width="wrap_content"
		android:id="@+id/informationsTable" android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:stretchColumns="1" android:layout_marginTop="10px">
		<TableRow>
			<Button android:layout_width="wrap_content" android:id="@+id/dialogInfoBtnTelephoner"
				android:layout_height="wrap_content" android:text="Téléphoner"
				android:layout_marginBottom="5px"></Button>
		</TableRow>

		<TableRow>
			<Button android:id="@+id/dialogInfoBtnNavClient"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_column="0" android:text="Navigation jusqu'au client"
				android:layout_marginBottom="5px" />

		</TableRow>
		<TableRow>
			<Button android:id="@+id/dialogInfoBtnNavDest"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_column="0" android:text="Navigation jusqu'à la destination du client"
				android:layout_marginBottom="5px" />

		</TableRow>
		<TableRow>
			<Button android:id="@+id/dialogInfoBtnAnnuler"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_column="0" android:text="Annuler course"
				android:layout_marginBottom="5px" />

		</TableRow>
		<TableRow>
			<Button android:id="@+id/dialogInfoBtnTerminer"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_column="0" android:text="Course terminée"
				android:layout_marginBottom="5px" />

		</TableRow>

	</TableLayout>
</LinearLayout>
	        		